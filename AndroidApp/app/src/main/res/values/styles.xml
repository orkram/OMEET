<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_bar">
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="input_field_box" parent="Theme.OrangeMeet.NoActionBar">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:foreground">@drawable/outline_box_rounded</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="input_field_box_icon_box" parent="Theme.OrangeMeet.NoActionBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="login_register_button" parent="Theme.OrangeMeet.NoActionBar">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="input_field_box_icon_box_bg" parent="Theme.OrangeMeet.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="srcCompat">@drawable/input_field_icon_box</item>
    </style>

    <style name="input_field_box_icon_box_icon" parent="Theme.OrangeMeet.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="input_field_textedit" parent="Theme.OrangeMeet.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="text_input_layout" parent="Theme.OrangeMeet.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="boxCollapsedPaddingTop">4dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="text_input_layout_edit_text" parent="Theme.OrangeMeet.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>